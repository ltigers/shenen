<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" 
    android:layout_height="48.0dp"
    android:id="@+id/titlebar"
    android:background="@color/g_green">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="30.0dp"
        android:layout_centerVertical="true"
        android:id="@+id/center_text_container"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/g_widget_margin"
        android:paddingRight="@dimen/g_widget_margin"
        android:layout_marginLeft="@dimen/g_widget_margin"
        android:background="@drawable/bg_back">
        <TextView 
            android:textSize="18.0dip" 
            android:textColor="#ffffffff" 
            android:ellipsize="end" 
            android:gravity="center" 
            android:id="@+id/center_text" 
            android:layout_width="wrap_content" 
            android:layout_height="wrap_content" 
            android:text="北京" 
            android:singleLine="true" 
            android:maxLength="4" />
        <ImageView 
            android:id="@+id/title_right_drawable" 
            android:background="@drawable/dropdown" 
            android:layout_width="wrap_content" 
            android:layout_height="wrap_content" 
            android:layout_marginLeft="@dimen/g_widget_margin" />
        </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/center_input_container"
        android:layout_marginLeft="125.0dip" 
        android:layout_marginRight="@dimen/g_widget_margin">
        <TextView 
            android:textSize="@dimen/g_text_size_medium" 
            android:textColorHint="@color/g_deep_green" 
            android:gravity="left|center" 
            android:id="@+id/center_edit" 
            android:background="@drawable/title_input_bg" 
            android:paddingLeft="27.0dip" 
            android:paddingRight="27.0dip" 
            android:layout_width="fill_parent" 
            android:layout_height="28.0dip" 
            android:hint="请输入类别或关键字" 
            android:singleLine="true" 
            android:maxLength="100" 
            android:layout_centerVertical="true" 
            android:imeOptions="actionSearch" />
        <ImageView 
            android:id="@+id/input_search_icon" 
            android:background="@drawable/ic_search"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" 
            android:layout_marginLeft="2.0dip" 
            android:layout_centerVertical="true" />
        </RelativeLayout>
</RelativeLayout>
