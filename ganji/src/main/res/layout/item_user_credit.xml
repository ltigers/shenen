<?xml version="1.0" encoding="utf-8"?>
<LinearLayout 
    android:orientation="vertical" 
    android:background="@drawable/personal_center_tittle_bg" 
    android:layout_width="fill_parent" 
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout 
        android:orientation="vertical" 
        android:id="@+id/personal_center_all_bg_layout" 
        android:background="@drawable/personal_center_tittle_bg"
        android:layout_width="fill_parent"
        android:layout_height="140.0dip">
        <LinearLayout 
            android:orientation="vertical" 
            android:layout_width="fill_parent" 
            android:layout_height="wrap_content">
            <RelativeLayout 
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">
                <RelativeLayout 
                    android:id="@+id/dummy" 
                    android:layout_width="78.0dip"
                    android:layout_height="78.0dip"
                    android:layout_marginTop="16.0dip"
                    android:visibility="gone"
                    android:layout_centerHorizontal="true" />
                    <ImageView 
                        android:background="@drawable/personal_center_headview_shadow"
                        android:layout_width="wrap_content" 
                        android:layout_height="wrap_content" 
                        android:layout_marginLeft="13.0dip" 
                        android:layout_marginTop="30.0dip" 
                        android:visibility="gone"
                        android:layout_alignLeft="@id/dummy" />
                <RelativeLayout 
                    android:id="@+id/personal_center_head" 
                    android:layout_width="78.0dip" 
                    android:layout_height="78.0dip"
                    android:layout_marginTop="16.0dip"
                    android:layout_centerHorizontal="true">
                    <ImageView 
                        android:layout_width="78.0dip" 
                        android:layout_height="78.0dip"
                        android:src="@drawable/personal_center_head_bg" 
                        android:layout_centerInParent="true" />
                    <com.cntysoft.ganji.widget.CircleImageView
                        android:id="@+id/personal_center_head_iamge"
                        android:layout_width="72.0dip"
                        android:layout_height="72.0dip"
                        android:src="@drawable/personal_center_no_login"
                        android:layout_centerInParent="true" />
                </RelativeLayout>
                <LinearLayout 
                    android:orientation="horizontal"
                    android:id="@+id/shadow" 
                    android:visibility="invisible" 
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="18.0dip"
                    android:layout_toRightOf="@id/personal_center_head" />
                <ImageView 
                    android:id="@+id/personal_center_phone_ok_shadow" 
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" 
                    android:layout_marginLeft="3.0dip" 
                    android:src="@drawable/personal_center_phone_ok_shadow"
                    android:layout_alignLeft="@id/shadow" 
                    android:layout_alignTop="@id/shadow" 
                    android:visibility="invisible"/>
                <LinearLayout 
                    android:orientation="horizontal" 
                    android:id="@+id/personal_center_phone_ok" 
                    android:background="@drawable/personal_center_ok"
                    android:visibility="gone" 
                    android:layout_width="wrap_content" 
                    android:layout_height="wrap_content" 
                    android:layout_marginTop="18.0dip"
                    android:layout_toRightOf="@id/personal_center_head">
                    <ImageView 
                        android:layout_gravity="center_vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="7.0dip"
                        android:src="@drawable/personal_center_ok_icon" />
                    <TextView 
                        android:textSize="13.0dip" 
                        android:textColor="#ff22bb55" 
                        android:layout_gravity="center_vertical" 
                        android:layout_width="wrap_content" 
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="3.0dip"
                        android:layout_marginRight="3.0dip"
                        android:text="已认证" 
                        android:singleLine="true" />
                </LinearLayout>
                <ImageView 
                    android:id="@+id/personal_center_right_arrows"
                    android:paddingBottom="10.0dip" 
                    android:layout_width="wrap_content" 
                    android:layout_height="wrap_content"
                    android:layout_marginRight="3.0dip" 
                    android:visibility="invisible"
                    android:src="@drawable/personal_center_bg_right_arrows"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true" />
                <LinearLayout 
                    android:gravity="center_horizontal"
                    android:orientation="horizontal"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10.0dip"
                    android:layout_below="@id/personal_center_head">
                    <TextView 
                        android:textSize="16.0dip"
                        android:textColor="@color/white"
                        android:layout_gravity="center_horizontal"
                        android:id="@+id/personal_center_login_name"
                        android:layout_width="wrap_content" 
                        android:layout_height="wrap_content" 
                        android:text="点击头像登录" />
                    <TextView 
                        android:textSize="16.0dip"
                        android:textColor="@color/login_name_color"
                        android:layout_gravity="center_horizontal"
                        android:id="@+id/personal_center_login_balance" 
                        android:visibility="gone" 
                        android:layout_width="wrap_content" 
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10.0dip" 
                        android:layout_marginTop="6.0dip" 
                        android:text="账户余额" />
                </LinearLayout>
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout 
        android:orientation="horizontal"
        android:background="@drawable/personal_center_tittle_bg_gray"
        android:layout_width="fill_parent" 
        android:layout_height="50.0dip">
        <RelativeLayout 
            android:gravity="center" 
            android:id="@+id/collect" 
            android:background="@drawable/personal_center_three_button_click"
            android:layout_width="0.0dip" 
            android:layout_height="fill_parent" 
            android:layout_weight="1.0">
            <ImageView android:id="@+id/shoucang_icon" 
                android:layout_width="wrap_content" 
                android:layout_height="wrap_content" 
                android:src="@drawable/personal_center_shoucang_icon" />
            <TextView 
                android:textSize="@dimen/g_text_size_large" 
                android:textColor="@color/white" 
                android:id="@+id/shoucang"
                android:paddingLeft="4.0dip" 
                android:layout_width="wrap_content" 
                android:layout_height="wrap_content" 
                android:layout_marginTop="2.0dip" 
                android:text="收藏" 
                android:layout_toRightOf="@id/shoucang_icon" />
        </RelativeLayout>
        <View 
            android:background="#ffe5e5e5"
            android:layout_width="1.0px"
            android:layout_height="fill_parent"
            android:layout_marginTop="12.0dip"
            android:layout_marginBottom="12.0dip" />
        <RelativeLayout 
            android:gravity="center" 
            android:id="@+id/rsslayout" 
            android:background="@drawable/personal_center_three_button_click"
            android:layout_width="0.0dip" 
            android:layout_height="fill_parent"
            android:layout_weight="1.0">
            <ImageView 
                android:id="@+id/dingyue_icon" 
                android:layout_width="wrap_content" 
                android:layout_height="wrap_content" 
                android:src="@drawable/personal_center_dingyue_icon" />
            <TextView 
                android:textSize="@dimen/g_text_size_large" 
                android:textColor="@color/white" 
                android:id="@+id/dingyue" 
                android:paddingLeft="4.0dip" 
                android:layout_width="wrap_content" 
                android:layout_height="wrap_content"
                android:layout_marginTop="2.0dip" 
                android:text="订阅" 
                android:layout_toRightOf="@id/dingyue_icon" />
            <ImageView android:gravity="center" 
                android:id="@+id/rssnumber" 
                android:background="@drawable/ic_new" 
                android:visibility="gone" 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" 
                android:layout_toRightOf="@id/dingyue" />
            
        </RelativeLayout>
    </LinearLayout>
    <View 
        android:background="#ffd9d9d9"
        android:layout_width="fill_parent"
        android:layout_height="1.0px" />
</LinearLayout>
