<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" 
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/white">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@color/g_green"
        android:gravity="center"
        >
        <TextView
            android:textSize="18.0dip"
            android:textColor="#ffffffff"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:id="@+id/nearby_title"
            android:text="@string/nearby_title"/>
        </LinearLayout>
    <include layout="@layout/item_location" 
        android:layout_height="50.0dip"
        android:layout_width="match_parent"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/nearbybackground"
            android:src="@drawable/near_background"/>
        <RelativeLayout 
            android:id="@+id/nearContainer"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true" 
            android:layout_centerVertical="true">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/fulltime_job"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="50dp"
                android:visibility="invisible"
                >
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/near_fulltime_jobs_default"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="全职工作"
                    android:gravity="center"
                    android:layout_marginTop="5dp"/>
                </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/parttime_job"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_marginTop="90dp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="50dp"
                android:visibility="invisible"
                >
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/near_parttime_jobs_default"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="兼职工作"
                    android:gravity="center"
                    android:layout_marginTop="5dp"/>
            </LinearLayout>                    
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/homeserv"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_marginTop="190dp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="30dp"
                android:visibility="invisible"
                >
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/near_life_serv_default"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="家政服务"
                    android:gravity="center"
                    android:layout_marginTop="5dp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/handwupin"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_marginTop="265dp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="80dp"
                android:visibility="invisible"
                >
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/near_2nd_hand_wupin_default"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="二手物品"
                    android:gravity="center"
                    android:layout_marginTop="5dp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/friendship"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_marginTop="265dp"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="80dp"
                android:visibility="invisible"
                >
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/near_friends_default"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="婚恋交友"
                    android:gravity="center"
                    android:layout_marginTop="5dp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/handhouse"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_marginTop="190dp"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="30dp"
                android:visibility="invisible"
                >
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/near_2nd_hand_house_default"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="二手房"
                    android:gravity="center"
                    android:layout_marginTop="5dp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/fangchan"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_marginTop="90dp"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="50dp"
                android:visibility="invisible"
                >
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/near_fangchan_default"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="房产"
                    android:gravity="center"
                    android:layout_marginTop="5dp"/>
            </LinearLayout>
            </RelativeLayout>
        </RelativeLayout>
</LinearLayout>
