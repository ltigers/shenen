<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" 
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:id="@+id/AllLinearLayout"
    tools:context=".SplashActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout android:id="@+id/bottom_ganjilogo" 
            android:background="@drawable/white" 
            android:layout_width="fill_parent" 
            android:layout_height="105.0dip" 
            android:layout_alignParentBottom="true">
            <ImageView android:layout_width="wrap_content" 
                android:layout_height="wrap_content" 
                android:src="@drawable/launch_ganjilogo" 
                android:layout_centerHorizontal="true" 
                android:layout_centerVertical="true" />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@id/bottom_ganjilogo">
            <ImageView android:id="@+id/splash_img" 
                android:background="@drawable/ganji_launch_default_img" 
                android:layout_width="fill_parent" 
                android:layout_height="fill_parent" 
                android:scaleType="fitXY" />
            </RelativeLayout>
        </RelativeLayout>

</LinearLayout>
