<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tiger="http://schemas.android.com/apk/res/com.cntysoft.ganji"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#fff0f0f0"
        android:orientation="vertical">
        <include layout="@layout/item_user_credit"/>
        <com.cntysoft.ganji.widget.PersonCommonView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            tiger:src="@drawable/personal_centre_post_default"
            tiger:titleText="我的帖子"
            tiger:dividerVisiable="0" 
            tiger:topdividerVisiable="0"
            tiger:bottomdividerVisiable="8"
            android:id="@+id/my_tz"/>
        <com.cntysoft.ganji.widget.PersonCommonView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tiger:src="@drawable/personal_centre_my_popularize"
            tiger:titleText="我的推广"
            tiger:dividerVisiable="0"
            tiger:topdividerVisiable="8"
            tiger:bottomdividerVisiable="8"
            android:id="@+id/my_tg"/>
        <com.cntysoft.ganji.widget.PersonCommonView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tiger:src="@drawable/personal_centre_resume_default"
            tiger:titleText="我的简历"
            tiger:dividerVisiable="0"
            tiger:topdividerVisiable="8"
            tiger:bottomdividerVisiable="8"
            android:id="@+id/my_jl"/>
        <com.cntysoft.ganji.widget.PersonCommonView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tiger:src="@drawable/personal_centre_jobs_default"
            tiger:titleText="我的招聘"
            tiger:dividerVisiable="0"
            tiger:topdividerVisiable="8"
            tiger:bottomdividerVisiable="8"
            android:id="@+id/my_zp"/>
        <com.cntysoft.ganji.widget.PersonCommonView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tiger:src="@drawable/personal_centre_serviceshop_default"
            tiger:titleText="我的店铺"
            tiger:dividerVisiable="8"
            tiger:topdividerVisiable="8"
            tiger:bottomdividerVisiable="0"
            android:id="@+id/my_dp"/>
        <com.cntysoft.ganji.widget.PersonCommonView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tiger:src="@drawable/personal_centre_myhistory"
            tiger:titleText="我的历史"
            tiger:dividerVisiable="4"
            tiger:topdividerVisiable="0"
            tiger:bottomdividerVisiable="0"
            android:layout_marginTop="15dp"
            android:id="@+id/my_ls"/>
        <com.cntysoft.ganji.widget.PersonCommonView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tiger:src="@drawable/personal_centre_setting_default"
            tiger:titleText="设置"
            tiger:dividerVisiable="4"
            tiger:topdividerVisiable="0"
            tiger:bottomdividerVisiable="0"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp"
            android:id="@+id/setting"/>
        </LinearLayout>
</ScrollView>
