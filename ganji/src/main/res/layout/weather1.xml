<?xml version="1.0" encoding="utf-8"?>
<LinearLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" 
    android:layout_height="wrap_content"
    android:id="@+id/weather_view"
    android:background="#ff4fae2e"
    android:orientation="vertical">
    <include  layout="@layout/header"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginTop="0dp"
        android:background="@drawable/weather_bg"
       >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/weather"
                android:orientation="vertical">
                <LinearLayout 
                    android:gravity="center_vertical"
                    android:orientation="horizontal" 
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content" 
                    android:layout_marginTop="10.0dip">
                    <LinearLayout 
                        android:gravity="center_vertical"
                        android:layout_gravity="center_vertical" 
                        android:orientation="horizontal" 
                        android:id="@+id/traffic_controls"
                        android:visibility="gone" 
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <TextView 
                            android:textSize="16.0dip" 
                            android:textColor="#ffe4f7ee" 
                            android:gravity="center" 
                            android:layout_gravity="center_vertical" 
                            android:id="@+id/traffic_controls_title" 
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10.0dip" 
                            android:layout_marginRight="4.0dip" 
                            android:text="今天限行" />
                        </LinearLayout>
                    <LinearLayout
                        android:gravity="center" 
                        android:layout_gravity="center_vertical"
                        android:orientation="horizontal"
                        android:id="@+id/warning_bg"
                        android:background="#ffe55068"
                        android:visibility="gone" 
                        android:layout_width="wrap_content" 
                        android:layout_height="22.0dip" 
                        android:layout_marginLeft="10.0dip"
                        android:layout_marginRight="10.0dip">
                        <LinearLayout 
                            android:gravity="center" 
                            android:orientation="horizontal"
                            android:id="@+id/warning_background"
                            android:paddingLeft="10.0dip"
                            android:paddingTop="3.0dip" 
                            android:paddingRight="10.0dip"
                            android:paddingBottom="3.0dip" 
                            android:layout_width="wrap_content"
                            android:layout_height="22.0dip">
                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:id="@+id/warning_icon"
                                android:src="@drawable/warning_common_icon"/>
                            <TextView 
                                android:textSize="16.0dip"
                                android:textColor="#ffe4f7ee" 
                                android:gravity="center" 
                                android:id="@+id/warning" 
                                android:layout_width="wrap_content" 
                                android:layout_height="22.0dip" 
                                android:layout_marginLeft="5.0dip" 
                                android:text="道路结冰预警" />
                            </LinearLayout>
                        </LinearLayout>
                     </LinearLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:id="@+id/weather_today"
                    android:background="@drawable/weather_btn"
                    >
                    <TextView 
                        android:textSize="54.0dip" 
                        android:textColor="#ffe4f7ee"
                        android:gravity="center"
                        android:layout_gravity="right" 
                        android:id="@+id/current_temperature" 
                        android:layout_width="wrap_content" 
                        android:layout_height="wrap_content" 
                        android:layout_marginLeft="10.0dip" 
                        android:text="18°" 
                        android:layout_centerVertical="true" />
                    <View 
                        android:id="@+id/posittion" 
                        android:background="#ff40b15f"
                        android:visibility="invisible"
                        android:layout_width="1.0dip" 
                        android:layout_height="40.0dip" 
                        android:layout_centerInParent="true" />
                    <View android:id="@+id/divider" 
                        android:background="#ff40b15f" 
                        android:layout_width="1.0dip" 
                        android:layout_height="40.0dip" 
                        android:layout_centerInParent="true" />
                    <ImageView 
                        android:id="@+id/weather_condition_icon" 
                        android:layout_width="wrap_content" 
                        android:layout_height="wrap_content" 
                        android:layout_marginRight="5.0dip" 
                        android:src="@drawable/ic_weather12" 
                        android:layout_toLeftOf="@id/divider" 
                        android:layout_centerVertical="true" />
                    <LinearLayout 
                        android:orientation="horizontal" 
                        android:id="@+id/ll_weather_condition" 
                        android:layout_width="wrap_content" 
                        android:layout_height="wrap_content" 
                        android:layout_marginLeft="15.0dip" 
                        android:layout_marginTop="10.0dip" 
                        android:layout_marginRight="10.0dip" 
                        android:layout_toRightOf="@id/divider" 
                        android:layout_alignTop="@id/divider">
                        <TextView 
                            android:textSize="14.0dip" 
                            android:textColor="#ffe4f7ee" 
                            android:ellipsize="end" 
                            android:id="@+id/weather_condition" 
                            android:layout_width="0.0dip" 
                            android:layout_height="wrap_content" 
                            android:text="晴" 
                            android:singleLine="true" 
                            android:layout_weight="1.0" />
                        <TextView 
                            android:textSize="14.0dip" 
                            android:textColor="#ffe4f7ee" 
                            android:id="@+id/temperature_range1" 
                            android:layout_width="wrap_content" 
                            android:layout_height="wrap_content" 
                            android:layout_marginLeft="10.0dip"
                            android:layout_marginRight="5.0dip" 
                            android:text="28°~18°" />
                    </LinearLayout>
                    <TextView 
                        android:textSize="14.0dip" 
                        android:textColor="#ffe4f7ee" 
                        android:ellipsize="end" 
                        android:id="@+id/wind_range" 
                        android:layout_width="wrap_content" 
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8.0dip" 
                        android:layout_marginRight="10.0dip"
                        android:text="东南风1级到2级"
                        android:singleLine="true" 
                        android:layout_below="@id/ll_weather_condition" 
                        android:layout_alignLeft="@id/ll_weather_condition" />
                    </RelativeLayout>
                <View 
                    android:background="@drawable/weather_dash_bg" 
                    android:layout_width="fill_parent" 
                    android:layout_height="1.0dip" 
                    android:layout_marginLeft="10.0dip" 
                    android:layout_marginRight="10.0dip" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical" 
                    android:orientation="horizontal"
                    android:id="@+id/weather_tomorrow"
                    android:background="@drawable/weather_btn" 
                    android:paddingTop="10.0dip" 
                    android:paddingBottom="10.0dip"
                    >
                    <TextView 
                        android:textSize="16.0dip" 
                        android:textColor="#ffe4f7ee" 
                        android:gravity="center" 
                        android:id="@+id/weekday" 
                        android:layout_width="wrap_content" 
                        android:layout_height="wrap_content" 
                        android:layout_marginLeft="10.0dip" 
                        android:text=" 明天 周日" />
                    <TextView 
                        android:textSize="14.0dip" 
                        android:textColor="#ffe4f7ee" 
                        android:gravity="center" 
                        android:id="@+id/weather_condition1" 
                        android:layout_width="wrap_content" 
                        android:layout_height="wrap_content" 
                        android:layout_marginLeft="10.0dip" 
                        android:text="中到大雨" />
                    <TextView 
                        android:textSize="14.0dip"
                        android:textColor="#ffe4f7ee"
                        android:gravity="center" 
                        android:id="@+id/temperature_range2" 
                        android:layout_width="wrap_content" 
                        android:layout_height="wrap_content" 
                        android:layout_marginLeft="10.0dip" 
                        android:text="28°~18°" />
                    </LinearLayout>
                </LinearLayout>
        <View 
            android:id="@+id/air_quality_index_divider" 
            android:background="#ff81ddaa" 
            android:layout_width="wrap_content" 
            android:layout_height="0.5dip" />
        <RelativeLayout 
            android:id="@+id/air_quality_index"
            android:background="@drawable/weather_btn" 
            android:paddingTop="10.0dip" 
            android:paddingBottom="10.0dip" 
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">
            <ImageView android:id="@+id/air_quality"
                android:layout_width="wrap_content" 
                android:layout_height="wrap_content" 
                android:layout_marginLeft="10.0dip" 
                android:layout_marginTop="5.0dip" 
                android:layout_marginBottom="5.0dip" 
                android:src="@drawable/weather_air_quality"
                android:layout_alignParentLeft="true" 
                android:layout_centerVertical="true" />
            <TextView 
                android:textSize="16.0dip" 
                android:textColor="#ffffffff" 
                android:layout_width="wrap_content" 
                android:layout_height="wrap_content" 
                android:layout_marginLeft="10.0dip" 
                android:text="空气质量" 
                android:layout_toRightOf="@id/air_quality" 
                android:layout_centerVertical="true" />
            <ImageView 
                android:id="@+id/air_quality_right_arrow" 
                android:layout_width="wrap_content" 
                android:layout_height="wrap_content" 
                android:layout_marginRight="10.0dip" 
                android:src="@drawable/weather_right_arrow" 
                android:layout_alignParentRight="true" 
                android:layout_centerVertical="true" />
            <TextView 
                android:textSize="16.0dip" 
                android:textColor="#ffe4f7ee" 
                android:gravity="center" 
                android:id="@+id/pollution_index_desc" 
                android:background="#ffffaf32" 
                android:paddingLeft="10.0dip" 
                android:paddingRight="10.0dip" 
                android:layout_width="wrap_content" 
                android:layout_height="22.0dip" 
                android:layout_marginRight="5.0dip" 
                android:text="轻度污染" 
                android:layout_toLeftOf="@id/air_quality_right_arrow" 
                android:layout_centerVertical="true" />
            <TextView 
                android:textSize="22.0dip" 
                android:textColor="#ffe4f7ee" 
                android:id="@+id/pollution_index" 
                android:layout_width="wrap_content" 
                android:layout_height="wrap_content" 
                android:layout_marginRight="10.0dip" 
                android:text="102" 
                android:layout_toLeftOf="@id/pollution_index_desc" 
                android:layout_centerVertical="true" />
        </RelativeLayout>
        <View android:background="#ff81ddaa"
            android:layout_width="wrap_content" 
            android:layout_height="0.5dip" />
        <LinearLayout
            android:orientation="vertical" 
            android:background="@drawable/weather_btn" 
            android:addStatesFromChildren="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RelativeLayout 
                android:id="@+id/constellation"
                android:paddingBottom="2.0dip" 
                android:layout_width="fill_parent" 
                android:layout_height="wrap_content">
                <ImageView 
                    android:id="@+id/constellation_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10.0dip" 
                    android:layout_marginTop="13.0dip"
                    android:src="@drawable/constel_01" 
                    android:layout_alignParentLeft="true" />
                <TextView 
                    android:textSize="16.0dip" 
                    android:textColor="#ffffffff"
                    android:id="@+id/constellation_title"
                    android:layout_width="wrap_content" 
                    android:layout_height="wrap_content" 
                    android:layout_marginLeft="10.0dip" 
                    android:layout_marginTop="3.0dip"
                    android:text="星座运势" 
                    android:layout_toRightOf="@id/constellation_icon" 
                    android:layout_alignTop="@id/constellation_icon" />
                <ImageView 
                    android:id="@+id/constellation_right_arrow" 
                    android:layout_width="wrap_content" 
                    android:layout_height="wrap_content" 
                    android:layout_marginTop="4.0dip" 
                    android:layout_marginRight="10.0dip"
                    android:src="@drawable/weather_right_arrow" 
                    android:layout_alignTop="@id/constellation_icon" 
                    android:layout_alignParentRight="true"
                    android:visibility="gone"/>
                <TextView 
                    android:textSize="16.0dip"
                    android:textColor="#ffe4f7ee" 
                    android:id="@+id/constellation_tips"               
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10.0dip"
                    android:text="点击选择星座"
                    android:layout_alignTop="@id/constellation_title" 
                    android:layout_alignParentRight="true" />
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:id="@+id/lucky_index"
                    android:layout_marginTop="3.0dip"
                    android:layout_marginRight="5.0dip"
                    android:layout_toLeftOf="@id/constellation_right_arrow" 
                    android:layout_alignTop="@id/constellation_icon" 
                    android:layout_centerVertical="true"
                    android:visibility="gone"/>                      
                <TextView 
                    android:textSize="14.0dip" 
                    android:textColor="#ffe4f7ee"
                    android:ellipsize="end" 
                    android:id="@+id/constellation_description" 
                    android:layout_width="wrap_content" 
                    android:layout_height="wrap_content" 
                    android:layout_marginTop="5.0dip" 
                    android:layout_marginRight="10.0dip" 
                    android:text="身边环绕的朋友人数虽然不多，但彼此能够建立良性" 
                    android:singleLine="true" 
                    android:visibility="invisible"
                    android:layout_below="@id/constellation_icon"
                    android:layout_alignLeft="@id/constellation_title" />
            </RelativeLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:background="@drawable/weather_cloud">
                <ImageView 
                    android:layout_gravity="center"
                    android:id="@+id/constellation_up_arrow"
                    android:layout_width="wrap_content" 
                    android:layout_height="wrap_content"
                    android:clickable="true"
                    android:src="@drawable/weather_up_arrows" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
</LinearLayout>
