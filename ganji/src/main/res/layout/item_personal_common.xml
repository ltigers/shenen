<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" 
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:gravity="center_vertical"
    android:background="@drawable/bg_personal_centre_item">
    <View
        android:id="@+id/personal_top_divider"
        android:background="#ffd8d8d8"
        android:layout_width="fill_parent"
        android:layout_height="1px"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="47dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:background="#ffffffff"
        android:gravity="center_vertical">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/personal_iv"
            android:duplicateParentState="true"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="20.0dip"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:layout_gravity="center_vertical"
            android:id="@+id/personal_tv"
            android:text="标题"
            android:duplicateParentState="true"
            android:layout_marginLeft="15dp"
            android:textSize="16.0sp"
            android:textColor="@color/dark_gray1"/>
       </LinearLayout>
    <View
        android:id="@+id/personal_divider"
        android:background="#ffd8d8d8"
        android:layout_width="fill_parent"
        android:layout_height="1px"
        android:layout_marginLeft="57dp" />
    <View
        android:id="@+id/personal_bottom_divider"
        android:background="#ffd8d8d8"
        android:layout_width="fill_parent"
        android:layout_height="1px"/>
</LinearLayout>
