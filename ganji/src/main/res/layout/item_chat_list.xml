<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffffff"
    android:orientation="horizontal">
    <LinearLayout
        android:orientation="horizontal"
        android:background="@drawable/selector_item_background"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/imchat_list_item_view_height"
        android:layout_gravity="center_vertical">
        <RelativeLayout 
            android:id="@+id/layout_contact_avator"
            android:layout_width="@dimen/imchat_list_item_view_height"
            android:layout_height="@dimen/imchat_list_item_view_height">
            <ImageView 
                android:id="@+id/img_contact_avator"
                android:layout_width="wrap_content" 
                android:layout_height="wrap_content"
                android:src="@drawable/icon_contact_default"
                android:scaleType="centerCrop"
                android:layout_centerInParent="true" />
            <ImageView 
                android:id="@+id/img_circle_selector"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/icon_circle_selector" 
                android:layout_centerInParent="true" />
        </RelativeLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginLeft="10dp"
            android:orientation="vertical"
            android:gravity="center_vertical"
            android:layout_gravity="center_vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:id="@+id/message_cat"
                    android:text="类别"
                    android:textSize="16.0dip"
                    android:ellipsize="end"
                    android:layout_weight="1"
                    android:singleLine="true"/>
                <TextView 
                    android:textSize="12.0dip" 
                    android:textColor="@color/gray_808080"
                    android:layout_gravity="center_vertical"
                    android:id="@+id/answer_time" 
                    android:layout_width="wrap_content" 
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8.0dip" 
                    android:text="15-4-18" 
                    android:layout_weight="0.0"
                    android:layout_marginRight="10dp"/>
                </LinearLayout>
            <TextView 
                android:textSize="14.0dip" 
                android:textColor="@color/gray_808080" 
                android:gravity="center_vertical"
                android:layout_gravity="center_vertical" 
                android:id="@+id/talk_content" 
                android:layout_width="fill_parent" 
                android:layout_height="wrap_content" 
                android:text="xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx" 
                android:singleLine="true" 
                android:layout_weight="1.0" 
                android:paddingTop="10dp"
                android:ellipsize="end"/>
            </LinearLayout>
     </LinearLayout>
</LinearLayout>
