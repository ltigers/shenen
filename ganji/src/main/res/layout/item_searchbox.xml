<?xml version="1.0" encoding="utf-8"?>
<LinearLayout 
    android:orientation="vertical" 
    android:background="@color/gray_f3f3f3" 
    android:layout_width="fill_parent" 
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout 
        android:gravity="center_vertical" 
        android:id="@+id/input_search_layoutroot"
        android:background="@drawable/search_bg"
        android:paddingLeft="10.0dip"
        android:paddingTop="0.0dip" 
        android:paddingRight="6.0dip" 
        android:paddingBottom="0.0dip" 
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" 
        android:layout_marginLeft="14.0dip" 
        android:layout_marginTop="8.0dip" 
        android:layout_marginRight="14.0dip"
        android:layout_marginBottom="8.0dip">
        <ImageView 
            android:layout_gravity="left|center" 
            android:id="@+id/imageview_magnifier" 
            android:background="@drawable/icon_search_small"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <EditText 
            android:textSize="15.0sp" 
            android:textColorHint="#ffaaaaaa"
            android:id="@+id/edittext_search"
            android:background="@android:color/transparent"
            android:layout_width="0.0dip" 
            android:layout_height="fill_parent"
            android:layout_marginLeft="5.0dip"
            android:hint="搜索" 
            android:singleLine="true"
            android:maxLength="64"
            android:layout_weight="1.0"
            android:imeOptions="actionSearch" />
        <Button 
            android:layout_gravity="right|center"
            android:id="@+id/button_clear_search" 
            android:background="@drawable/search_clear_selector"
            android:visibility="gone"
            android:layout_width="25.0dip"
            android:layout_height="25.0dip"
            android:layout_marginRight="5.0dip" />
    </LinearLayout>
</LinearLayout>
